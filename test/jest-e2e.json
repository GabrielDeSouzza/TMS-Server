{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "modulePaths": ["<rootDir>"],
  "moduleDirectories": ["<rootDir>/../src", "node_modules"],
  "setupFiles": ["<rootDir>../.jest/jest.setup.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
